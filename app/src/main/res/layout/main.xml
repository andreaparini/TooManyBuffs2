<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:fitsSystemWindows="true">

	<include
		android:id="@+id/mainToolbar"
		layout="@layout/main_toolbar"
		android:layout_width="match_parent"/>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center">

		<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/mainNewBuildButton"
			android:text="New Build"
			style="?android:attr/buttonBarButtonStyle"
			android:padding="25dp"
			android:onClick="onNewBuildButtonClick"/>

		<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Load/Manage Builds"
			android:id="@+id/mainLoadBuildButton"
			android:padding="25dp"
			style="?android:attr/buttonBarButtonStyle"
			android:onClick="onLoadBuildsButtonClick"/>

		<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Manage/Add Buffs"
			android:padding="25dp"
			style="?android:attr/buttonBarButtonStyle"
            android:onClick="onManageBuffsButtonClick"/>

	</LinearLayout>

</LinearLayout>

