            android:name="com.andreap.toomanybuffs.AddAttackActivity"
            android:label="Set Attack Data" >
        </activity>
        <activity
            android:name="com.andreap.toomanybuffs.ModifyAttackActivity"
            android:label="Modify Attack Data" >
        </activity>
        <activity
            android:name="com.andreap.toomanybuffs.CombatActivity"
